//第二种写法，用include包含所有ts文件，同时可写不包含文件  
{
    "compilerOptions":
    {
        "module": "amd", //或system  
        "sourceMap": true,
        "outFile": "./app.js"
    },
    "include": [
        "./app.ts",
        // "./app01.ts",
    ],
    "exclude": [ //不包括的文件  
        "node_module"
    ]
}